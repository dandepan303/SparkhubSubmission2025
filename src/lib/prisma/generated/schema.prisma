generator client {
  provider      = "prisma-client-js"
  output        = "../src/lib/prisma/generated"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id               String     @id
  email            String     @unique
  name             String
  contactInfo      String?
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt
  newNotifications Boolean    @default(false)
  notifications    String[]   @default([])
  role             String
  jobsCreated      Job[]      @relation("JobHirer")
  jobsWorking      Job[]      @relation("JobWorker")
  offerings        Offering[] @relation("Offerings")
  ratingFrom       Rating[]   @relation("RatingFrom")
  ratingTo         Rating[]   @relation("RatingTo")
  applications     Job[]      @relation("JobApplications")

  @@map("users")
}

model Job {
  id           String    @id @default(cuid())
  title        String
  description  String
  location     String
  status       JobStatus @default(SEARCHING)
  hirerId      String
  workerId     String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  payment      Int
  hirer        User      @relation("JobHirer", fields: [hirerId], references: [id], onDelete: Cascade)
  worker       User?     @relation("JobWorker", fields: [workerId], references: [id])
  ratings      Rating[]
  applications User[]    @relation("JobApplications")

  @@index([status])
  @@index([location])
  @@index([createdAt])
  @@map("jobs")
}

model Rating {
  id        String     @id @default(cuid())
  value     Int
  text      String?
  type      RatingType
  fromId    String
  toId      String
  jobId     String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  from      User       @relation("RatingFrom", fields: [fromId], references: [id], onDelete: Cascade)
  job       Job        @relation(fields: [jobId], references: [id])
  to        User       @relation("RatingTo", fields: [toId], references: [id], onDelete: Cascade)

  @@index([type])
  @@map("ratings")
}

model Offering {
  id          String   @id @default(cuid())
  description String
  cost        Int
  quantity    Int?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      String
  owner       User     @relation("Offerings", fields: [userId], references: [id], onDelete: Cascade)

  @@map("offerings")
}

enum JobStatus {
  SEARCHING
  IN_PROGRESS
  COMPLETED
}

enum RatingType {
  HIRER
  WORKER
}
